#include <stdio.h>
#include <math.h>  

int main() {
    int N;
    double a, S = 0;

  
    printf("Enter the value of a: ");
    scanf("%lf", &a);  
    printf("Enter the value of N (N >= 1): ");
    scanf("%d", &N);

    if (N < 1) {
        printf("N must be greater than or equal to 1.\n");
        return 1;  
    }

  
    for (int n = 1; n <= N; n++) {
        double term = pow(a, n) / n;  // a^n / n
        if (n % 2 == 1) {
            S += term; 
        } else {
            S -= term; 
        }
    }

    printf("Sum of the series: %.6f\n", S);

    return 0;
}
